<% layout('layouts/boilerplate') -%>

    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <div class="reserve-title d-flex align-items-center justify-content-center">
                <i class="fa-solid fa-jet-fighter"></i><i class="fa-solid fa-umbrella-beach "></i>
                <h3 class="text-center fw-bolder ">Reserve Your Dream Stay</h3>
            </div>

            <form id="bookingForm" novalidate class="needs-validation">
                <div class="mg-bottom-3">
                    <label for="name" class="form-label">Full Name</label>
                    <input type="text" class="form-control shadow-sm" placeholder="enter your full name" id="name"
                        name="name" required>
                    <div class="invalid-feedback">Please enter your name.</div>
                </div>

                <div class="mg-bottom-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control shadow-sm" placeholder="name@example.com" id="email"
                        name="email" required>
                    <div class="invalid-feedback">Please enter a valid email.</div>
                </div>

                <div class="mg-bottom-3">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control shadow-sm" placeholder="XXXXXXXXXX" id="phone" name="phone"
                        required>
                    <div class="invalid-feedback">Please enter Phone number</div>
                </div>

                <div class="mg-bottom-3">
                    <label for="checkin" class="form-label">Check-in Date</label>
                    <input type="date" class="form-control shadow-sm" id="checkin" name="checkin" required>
                </div>

                <div class="mg-bottom-3">
                    <label for="checkout" class="form-label">Check-out Date</label>
                    <input type="date" class="form-control shadow-sm" id="checkout" name="checkout" required>
                </div>

                <div class="mg-bottom-3">
                    <label for="guests" class="form-label">Number of Guests</label>
                    <input type="number" class="form-control shadow-sm" placeholder="enter total guests" id="guests"
                        name="guests" min="1" required>
                </div>

                <div class="mg-bottom-3">
                    <label for="requests" class="form-label">Special Requests (Optional)</label>
                    <textarea class="form-control" id="requests" name="requests" rows="3"></textarea>
                </div>
                <br>

                <a href="/listings/payments" id="reserveButton" class="btn btn-primary"
                    style="pointer-events: none; opacity: 0.5;">Reserve</a>


            </form>
            <br>
            <br>
            <br>
            <script>
                const form = document.getElementById('bookingForm');
                const reserveButton = document.getElementById('reserveButton');

                form.addEventListener('input', function () {
                    // Check if the form is valid
                    if (form.checkValidity()) {
                        reserveButton.style.pointerEvents = 'auto'; // Enable the button
                        reserveButton.style.opacity = '1'; // Restore the opacity
                    } else {
                        reserveButton.style.pointerEvents = 'none'; // Disable the button
                        reserveButton.style.opacity = '0.5'; // Reduce opacity
                    }
                });

            </script>
        </div>
    </div>